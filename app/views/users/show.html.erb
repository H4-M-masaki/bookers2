<div>
  <h3><%= @user.name %></h3>
  
     <%= image_tag  @user.get_profile_image("100x100")  %>
     <p><%= link_to "⚙", edit_user_path %></p>
  
</div>



<% @books.each do |book| %>
<div>
  <p><%= link_to book.title, book_path(book.id) %></p>
  <p><%= book.body %></p>
  
   # ユーザーイメージに入れ替える
</div>
<% end %>

