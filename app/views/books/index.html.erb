<h2>プロフィール編集</h2>

<%= image_tag @book.get_image %>
<%= link_to "⚙",@user %>




<% @books.each do |book| %>
    <div>
     <%= image_tag book.get_image %>
      <p>title : <%= link_to book.title, book_path(book.id) %></p>
      <p>body : <%= book.body %></p>
    </div>
<% end %>


<h1>投稿フォーム（仮）</h1>

 <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>


<%= form_with model: @book, local:true do |f| %>
 <h4>title</h4>
 <%= f.text_field :title %>
 <h4>body</h4>
 <%= f.text_area :body %>
 <%= f.submit '投稿' %>
 <% end %>



