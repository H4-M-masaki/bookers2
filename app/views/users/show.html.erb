<div>
  <h3><%= @user.name %></h3>

    <p><%= link_to "プロフィール編集", edit_user_path %></p>
  
</div>

<% @books.each do |book| %>
<div>
  <p>title : <%= link_to book.title, book_path(book.id) %></p>
  <p>body : <%= book.body %></p>
  <p>name : <%= book.user.name %></p>
</div>
<% end %>

<h1>投稿フォーム（仮）</h1>

